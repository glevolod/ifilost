<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>{% block title %}If I'm lost{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        {% include 'theme/sidebar_top_left.html.twig' %}
        <!-- Right navbar links -->
        {% include 'theme/sidebar_top_right.html.twig' %}

    </nav>
    <!-- /.navbar -->

    {% include 'theme/sidebar_left.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
{#                        <h1>{{ block('title') }}</h1>#}
                    </div>
                    <div class="col-sm-6">
                        {% include 'theme/breadcrumbs.html.twig' %}
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                {% for label, messages in app.flashes %}
                    <div class="row">
                        <div class="offset-md-3 col-md-6">
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message|raw }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
                {% block body %}
                {% endblock %}
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Version</b> 1.0.0
        </div>
        <strong>Copyright &copy; "IfYouLostMe" ifyoulost.me | Mailto: <a href="mailto:{{ appMailAdmin }}" class="text-gray-dark">{{ appMailAdmin }}</a></strong>
    </footer>
</div>
<!-- ./wrapper -->
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
