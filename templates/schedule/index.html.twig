{% extends 'base.html.twig' %}

{% block title %}{{ app.request.attributes.get('_controller') }}{% endblock %}

{% block body %}
    <div class="row pb-2">
        <button type="button" class="btn btn-outline-success btn-sm" data-toggle="modal"
                data-target="#addScheduleModal">Add
        </button>
    </div>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Starting date</th>
                <th scope="col">Time</th>
                <th scope="col">Frequency</th>
                <th scope="col">Exceptions</th>
                <th scope="col">Timeout</th>
                <th scope="col">Reminder timeout</th>
                <th scope="col">Notifiables</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>@mdo</td>
                <td>@mdo</td>
                <td>@mdo</td>
                <td>@mdo</td>
            </tr>
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="addScheduleModal" tabindex="-1" role="dialog" aria-labelledby="addScheduleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addScheduleModalLabel">Add Schedule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="startingDate">Starting Date</label>
                                <input type="date" class="form-control" id="startingDate" placeholder="Date">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="time">Time</label>
                                <input type="time" class="form-control" id="time" placeholder="Time">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="frequency">Frequency</label>
                                <input type="number" class="form-control" id="frequency" placeholder="Frequency">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="exceptions">Frequency</label>
                                <input type="text" class="form-control" id="exceptions" placeholder="Exceptions">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="timeout">Timeout</label>
                                <input type="number" class="form-control" id="timeout" placeholder="Timeout">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="time">Reminder timeout</label>
                                <input type="number" class="form-control" id="reminderTimeout"
                                       placeholder="Reminder timeout">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="notifiables">Notifiables</label>
                                <input type="text" class="form-control" id="notifiables" placeholder="Notifiables">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
